pipeline {
    agent { label 'JAVA_17'}
    stages {
        stage('vcs') {
            steps {
                git url: 'https://github.com/spring-projects/spring-petclinic.git',
                      branch: 'main'
        }
            }
        stage('package') {
            steps {
                
                sh './gradlew build'
               
            }
        }
        stage('post build') {
            steps {
                archiveArtifacts artifacts: '**/target/spring-petclinic-*,jar',
                                 onlyIfSuccessful: true
                junit testResults: '**/surefire-reports/TEST-*.xml'
            }
        }

            }
        }
   

     